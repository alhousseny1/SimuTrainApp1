@model SimuTrainApp.ViewModels.TrainDetailVM
+
<section class="Centered">
    @if (Model.ErrorMessage == null)
    {
        <h1>@Model.Title</h1>

        <table>
            <tbody>
                <tr>
                    <td>
                        Train
                    </td>
                    <td>
                        @Model.CurrentTrain.Matricule
                    </td>
                </tr>
                <tr>
                    <td>
                        Destination
                    </td>
                    <td>
                        @Model.CurrentTrain.RouteOfTrain.DepartureStation.Name
                    </td>
                </tr>
                <tr>
                    <td>
                        Gare de Depart
                    </td>
                    <td>
                        @Model.CurrentTrain.RouteOfTrain.ArrivalStation.Name
                    </td>
                </tr>
                <tr>
                    <td>
                        Heure d'arrivée
                    </td>
                    <td>
                        @Model.CurrentTrain.RouteOfTrain.ArrivalTime
                    </td>
                </tr>
                <tr>
                    <td>
                        NB de Passager
                    </td>
                    <td>
                        @Model.CurrentTrain.NBPassenger
                    </td>
                </tr>
                <tr>
                    <td>
                        NB de Colis
                    </td>
                    <td>
                        @Model.CurrentTrain.NBParcels
                    </td>
                </tr>
            </tbody>
        </table>
    }
    else
    {
        <h1 class="alert-danger">@Model.ErrorMessage</h1>
    }

    <a class="MyButton" href="~/DM/CurrentTrainDashBoard">
        Retour à la liste
    </a>

</section>